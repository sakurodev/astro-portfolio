---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="w-full h-full bg-neutral-100 dark:bg-neutral-900 smooth-scroll-wrapper transition-colors"
  >
    <slot />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"
      integrity="sha512-onMTRKJBKz8M1TnqqDuGBlowlH0ohFzMXYRNebz+yOcc5TQr/zAKsthzhuv0hiyUKEiQEQXEynnXCvNTOk50dg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"></script>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "TThoves Medium";
    src:
      url("/fonts/TTHoves-Medium.woff2") format("woff2 supports variation"),
      url("/fonts/TTHoves-Medium.woff2") format("woff2-variations");
  }

  @font-face {
    font-family: "Recoleta";
    src:
      url("/fonts/Recoleta-Regular.woff2") format("woff2 supports variation"),
      url("/fonts/Recoleta-Regular.woff2") format("woff2-variations");
  }

  * {
    font-family: "TThoves Medium";
  }

  html {
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
</style>

<script>
  const body = document.body,
    scrollWrap = document.getElementsByClassName("smooth-scroll-wrapper")[0],
    height = scrollWrap.getBoundingClientRect().height - 1,
    speed = 0.04;

  var offset = 0;

  body.style.height = Math.floor(height) + "px";

  function smoothScroll() {
    offset += (window.pageYOffset - offset) * speed;

    var scroll = "translateY(-" + offset + "px) translateZ(0)";
    scrollWrap.style.transform = scroll;

    requestAnimationFrame(smoothScroll);
  }

  smoothScroll();
</script>
